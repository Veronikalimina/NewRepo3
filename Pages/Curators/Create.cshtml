@page
@model WebApplication1.Pages.Curators.CreateModel

<h4>Curator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Curator.Surname" class="control-label">Фамилия</label>
                <input asp-for="Curator.Surname" class="form-control" />
                <span asp-validation-for="Curator.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curator.Name" class="control-label">Имя</label>
                <input asp-for="Curator.Name" class="form-control" />
                <span asp-validation-for="Curator.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curator.MiddleName" class="control-label">Отчество</label>
                <input asp-for="Curator.MiddleName" class="form-control" />
                <span asp-validation-for="Curator.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
