@page
@model WebApplication1.Pages.Authentications.DeleteModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Authentication</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Куратор
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Authentication.IdCurator)
        </dd>
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Authentication.Login)
        </dd>
        <dt class="col-sm-2">
            Пароль
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Authentication.Password)
        </dd>
        <dt class="col-sm-2">
            Тип пользователя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Authentication.IdUser)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Authentication.IdAuthentication" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к таблице</a>
    </form>
</div>
