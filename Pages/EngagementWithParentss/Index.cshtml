@page
@model WebApplication1.Pages.EngagementWithParentss.IndexModel

<p>
    <a asp-page="Create">Создать запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Дата
            </th>
            <th>
                Студент
            </th>
            <th>
                Суть
            </th>
            <th>
                Принятое решение
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EngagementWithParents) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateConversation)
            </td>
