                @Html.DisplayFor(modelItem => item.IdStudent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EssenceOfConversation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcceptedDecision)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdEngagementWithParents">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.IdEngagementWithParents">Просмотр</a> |
