@page
@model WebApplication1.Pages.Students.EditModel

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.IdStudent" />
            <div class="form-group">
                <label asp-for="Student.IdGroup" class="control-label">Группа</label>
                <input asp-for="Student.IdGroup" class="form-control" />
                <span asp-validation-for="Student.IdGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Surname" class="control-label">Фамилия</label>
                <input asp-for="Student.Surname" class="form-control" />
                <span asp-validation-for="Student.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label">Имя</label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.MiddleName" class="control-label">Отчество</label>
                <input asp-for="Student.MiddleName" class="form-control" />
                <span asp-validation-for="Student.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Birthdate" class="control-label">Дата рождения</label>
                <input asp-for="Student.Birthdate" class="form-control" />
                <span asp-validation-for="Student.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
