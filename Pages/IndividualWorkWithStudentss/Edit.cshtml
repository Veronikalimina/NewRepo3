@page
@model WebApplication1.Pages.IndividualWorkWithStudentss.EditModel

<h4>IndividualWorkWithStudents</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IndividualWorkWithStudents.IdIndividualWorkWithStudents" />
            <div class="form-group">
                <label asp-for="IndividualWorkWithStudents.DateConversation" class="control-label">Дата</label>
                <input asp-for="IndividualWorkWithStudents.DateConversation" class="form-control" />
                <span asp-validation-for="IndividualWorkWithStudents.DateConversation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndividualWorkWithStudents.IdStudent" class="control-label">Студент</label>
                <input asp-for="IndividualWorkWithStudents.IdStudent" class="form-control" />
                <span asp-validation-for="IndividualWorkWithStudents.IdStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndividualWorkWithStudents.EssenceOfConversation" class="control-label">Суть</label>
                <input asp-for="IndividualWorkWithStudents.EssenceOfConversation" class="form-control" />
                <span asp-validation-for="IndividualWorkWithStudents.EssenceOfConversation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndividualWorkWithStudents.AcceptedDecision" class="control-label">Принятое решение</label>
                <input asp-for="IndividualWorkWithStudents.AcceptedDecision" class="form-control" />
                <span asp-validation-for="IndividualWorkWithStudents.AcceptedDecision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
